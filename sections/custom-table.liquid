{% assign color_scheme_id = section.settings.color_scheme %}
{% assign color_scheme = section.settings.color_scheme | prepend: 'color_schemes.' | json %}

{% if color_scheme_id != blank and color_scheme != blank %}
  {% assign settings = color_scheme.settings %}
  <style>
       .section-{{ section.id }}-padding {
         padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
         padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
       }

       @media screen and (min-width: 750px) {
         .section-{{ section.id }}-padding {
           padding-top: {{ section.settings.padding_top }}px;
           padding-bottom: {{ section.settings.padding_bottom }}px;
         }
       }
       .page-width {
         max-width: var(--page-width);
         background: {{ section.settings.background }};
         background: {{ section.settings.background_gradient }};
         color:  rgb(var(--color-foreground));
         box-shadow:{{ section.settings.shadow }};
       }
       button {
         background-color: {{ settings.button }};
         color: {{ settings.button_label }};
       }
       button.secondary {
         color: {{ settings.secondary_button_label }};
       }

    .table>tbody>tr>td{
      vertical-align:middle;
    }
    .table>thead:first-child>tr:first-child>th.with_border{
      border: 2px solid #F79E02 !important;

    }
      .with_border{
      border: 2px solid #F79E02;
      text-align: center;
     }
    #cvr th{
          font-size: 1.8em;
    }
    #for-use th{
      background-color: white;
      border-left: 0;
      border-top: 0;
      border-color: transparent;
      font-size: 1.5em;
    }
    #for-use th:first-child{
      border-top-left-radius: 10px;
      border-bottom-left-radius: 10px;

    }
    #for-use th:last-child{
      border-top-right-radius: 10px;
      border-bottom-right-radius: 10px;
    }
           /* Responsive styles */
       @media screen and (max-width: 750px) {
         .table {
           width: 100%;
           display: block;
           overflow-x: auto;
           white-space: nowrap;
         }
         .table thead, .table tbody, .table th, .table td, .table tr {
           display: block;
         }
         .table thead {
           display: none;
         }
         .table tr {
           margin-bottom: 1rem;
         }
         .table td {
           border: none;
           position: relative;
           padding-left: 50%;
           text-align: left;
           white-space: normal;
         }
         .table td:before {
           position: absolute;
           top: 50%;
           left: 20%;
           width: 45%;
           padding-right: 10px;
           white-space: nowrap;
           transform: translateY(-50%);
           content: attr(data-label);
           font-weight: bold;
           font-size: large;
           color: black;
         }
         .table_row_title {
           font-size: 1.2em;
           font-weight: bold;
         }
       }
  </style>
{% endif %}

<div class="color-{{ section.settings.color_scheme }} gradient shopify-section section">
  <div class="page-width page-width--narrow section-{{ section.id }}-padding">
    <table class="tabl-spec-c-r table">
      <thead>
        <tr id="cvr">
          <th style="border-color: transparent;">&nbsp;</th>
          <th rowspan="2" class="with_border">Commercial</th>

          <th rowspan="2" class="with_border">Residential</th>
        </tr>
        <tr id="for-use">
          <th style="border-color: transparent;">For Use In</th>
          <th>&nbsp;</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody class="tbody">
        {% for block in section.blocks %}
          <tr>
            {% if block.settings.for_use_title != blank %}
              <td>
                <h4 class="table_row_title">{{ block.settings.for_use_title }}</h4>
                {% if block.settings.for_use_text != blank %}
                  {{ block.settings.for_use_text }}
                {% endif %}
              </td>
            {% endif %}

            <td class="with_border" data-label="Commercial">
              <img
                class="icon"
                src="{{ block.settings.commercial_icon | image_url}}"
                alt="commerical_icon"
                width="40"
                height="40"
              >
            </td>

            <td class="with_border" data-label="Residential">
              <img
                class="icon"
                src="{{ block.settings.residential_icon | image_url}}"
                alt="residential"
                width="40"
                height="40"
              >
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
</div>

{% schema %}
{
  "name": "Custom Table Settings",
  "settings": [
        {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Custom Table",
      "category": "Custom"
    }
  ],
  "blocks": [{
    "type": "table_data",
    "name": "Table Row",
    "settings": [
      {
        "type": "text",
        "label": "For Use In - Title",
        "id": "for_use_title"
      },
      {
        "type": "richtext",
        "label": "For Use In - Text",
        "id": "for_use_text"
      },
      {
        "type": "image_picker",
        "label": "Commercial Use?",
        "id": "commercial_icon"
      },
      {
        "type": "image_picker",
        "label": "Residental Use?",
        "id": "residential_icon"
      }
    ]
  }]

}
{% endschema %}
