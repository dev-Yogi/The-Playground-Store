{% assign color_scheme_id = section.settings.color_scheme %}
{% assign color_scheme = section.settings.color_scheme | prepend: 'color_schemes.' | json %}

{% if color_scheme_id != blank and color_scheme != blank %}
  {% assign settings = color_scheme.settings %}
  <style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .icon-group {
      position: relative;
    }
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }
    .page-width {
      max-width: var(--page-width);
      background: {{ settings.background }};
      background: {{ settings.background_gradient }};
      color: {{ settings.text }};
      box-shadow: {{ settings.shadow }};
    }
    button {
      background-color: {{ settings.button }};
      color: {{ settings.button_label }};
    }
    button.secondary {
      color: {{ settings.secondary_button_label }};
    }
    .photo-grid{
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }
    .photo-container{
      text-align: center;
    }

    /* LARGE TABLETS styles */
    @media only screen and (min-width: 991px) and (max-width: 1366px) {

    }
    /* CELL PHONE styles */
    @media screen and (max-width: 480px) {

    }
  </style>
{% endif %}

<div
  class="color-{{ section.settings.color_scheme }} gradient shopify-section section"
>
  <div id="{{ section.settings.section_id }}" class="page-width page-width--narrow section-{{ section.id }}-padding">
    <h2 class="title inline-richtext h1" style="border-bottom: 1px solid;">
      {{ section.settings.header }}
    </h2>
    <div class="photo-grid">
      {% for block in section.blocks %}
        <div class="photo-container">
          {% if block.settings.image %}
            <img
              class="photo"
              src="{{ block.settings.image | image_url }}"
              alt="{{ block.settings.image_caption }}"
              width="auto"
              height="auto"
            >
            <div>
              <p>{{ block.settings.image_caption }}</p>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Photo Grid",
  "settings": [
    {
      "type": "text",
      "id":"header",
      "label": "Header",
      "default": "Photo Grid"
    },
    {
      "type":"text",
      "id": "section_id",
      "label": "Give Your Section An ID to Anchor (link"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
  ],
    "presets": [
    {
      "name": "Photo Grid"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "label": "Image",
          "id": "image"
        },        {
          "type": "inline_richtext",
          "label": "Image Caption",
          "id": "image_caption"
        },

      ]
    }

  ]
}
{% endschema %}
