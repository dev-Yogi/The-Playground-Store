    "multicolumn_e4Jjjk": {
      "type": "multicolumn",
      "blocks": {
        "column_6FPL8m": {
          "type": "column",
          "settings": {
            "title": "Equipment Inspection",
            "text": "<ul><li>Broken or missing equipment<\/li><li>Secure anchors, barriers, & panels<\/li><li>Loose or missing bolts and\/or clamps<\/li><li>Heavily worn moving parts, swing parts<\/li><li>Cracked and\/or broken plastic parts<\/li><li>Rusted, worn, or corroded metals<\/li><\/ul>",
            "link_label": "",
            "link": ""
          }
        },
        "column_aqyzRe": {
          "type": "column",
          "settings": {
            "title": "Ground Inspection",
            "text": "<ul><li>Broken glass, trash and other debris<\/li><li>Problems with surfacing<\/li><li>User modification such as rope swings<\/li><li>Vandalized, broken and defaced property<\/li><li>Insect damage or infestation<\/li><li>Tripping hazards like exposed tree roots<\/li><\/ul>",
            "link_label": "",
            "link": ""
          }
        }
      },
