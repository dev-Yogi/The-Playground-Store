    "simple_text_k7EYGR": {
      "type": "simple-text",
      "settings": {
        "color_scheme": "scheme-303b4181-c6ee-4c9a-8813-41b2252d4652",
        "header": "Why is Maintenance Important?",
        "heading_font_size": 34,
        "paragraph": "<p>The simple answer is that a properly maintained playground keeps kids safe, but there are many other reasons for regular playground maintenance:<\/p>",
        "text_font_size": 18,
        "alignment": "left",
        "padding_top": 12,
        "padding_bottom": 36
